        <Setter Property="Height" Value="25" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Cursor" Value="IBeam" />
        <Setter Property="FontFamily" Value="Tw Cen MT" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Background" Value="{StaticResource PodlojkaChern}" />
        <Setter Property="BorderBrush" Value="{StaticResource AksentCvet}" />
        <Setter Property="BorderThickness" Value="1.4" />
